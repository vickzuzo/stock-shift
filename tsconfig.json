{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "noImplicitAny": false,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@assets": ["assets"],
      "@assets/*": ["assets/*"],
      "@interfaces": ["src/interfaces"],
      "@interfaces/*": ["src/interfaces/*"],
      "@screens": ["src/screens"],
      "@screens/*": ["src/screens/*"],
      "@router": ["src/router"],
      "@router/*": ["src/router/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@network": ["src/network"],
      "@network/*": ["src/network/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      "@config": ["src/config"],
      "@config/*": ["src/config/*"],
      "@theme": ["src/theme"],
      "@theme/*": ["src/theme/*"],
      "@env": ["node_modules/react-native-dotenv"]
    },
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": true,
    "jsx": "react-native"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "typeRoots": ["src/typings"]
}
